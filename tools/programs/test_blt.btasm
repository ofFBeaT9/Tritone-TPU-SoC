# Test Program: BLT (Branch if Less Than) Instruction
# Tests: BLT with various comparison scenarios
# Coverage: Positive, negative, zero comparisons, edge cases
# Expected: All branches taken/not-taken correctly based on comparison

# ============================================================
# Test 1: Basic BLT - Less Than (should branch)
# ============================================================
    LDI R1, 3           # R1 = 3
    LDI R2, 7           # R2 = 7
    BLT R1, R2, lt_taken_1   # Should branch (3 < 7)
    LDI R3, -1          # Should be SKIPPED
    LDI R3, -1          # Should be SKIPPED
lt_taken_1:
    LDI R3, 1           # R3 = 1 (confirms branch worked)

# ============================================================
# Test 2: BLT - Equal (should NOT branch)
# ============================================================
    LDI R1, 5           # R1 = 5
    LDI R2, 5           # R2 = 5
    BLT R1, R2, lt_not_taken_1  # Should NOT branch (5 == 5, not less)
    LDI R4, 1           # R4 = 1 (confirms NOT branched)
lt_not_taken_1:
    LDI R5, 2           # R5 = 2

# ============================================================
# Test 3: BLT - Greater Than (should NOT branch)
# ============================================================
    LDI R1, 9           # R1 = 9
    LDI R2, 4           # R2 = 4
    BLT R1, R2, lt_not_taken_2  # Should NOT branch (9 > 4)
    LDI R6, 1           # R6 = 1 (confirms NOT branched)
lt_not_taken_2:
    LDI R7, 2           # R7 = 2

# ============================================================
# Test 4: BLT with Negative Numbers
# ============================================================
    LDI R1, -5          # R1 = -5
    LDI R2, 3           # R2 = 3
    BLT R1, R2, lt_taken_2   # Should branch (-5 < 3)
    LDI R8, -1          # Should be SKIPPED
lt_taken_2:
    LDI R8, 1           # R8 = 1 (confirms branch worked)

# ============================================================
# Test 5: BLT with Both Negative
# ============================================================
    LDI R1, -7          # R1 = -7
    LDI R2, -2          # R2 = -2
    BLT R1, R2, lt_taken_3   # Should branch (-7 < -2)
    LDI R3, -1          # Should be SKIPPED
lt_taken_3:
    LDI R3, 3           # R3 = 3 (confirms branch worked)

# ============================================================
# Test 6: BLT - Negative NOT less than more negative
# ============================================================
    LDI R1, -2          # R1 = -2
    LDI R2, -7          # R2 = -7
    BLT R1, R2, lt_not_taken_3  # Should NOT branch (-2 > -7)
    LDI R4, 3           # R4 = 3 (confirms NOT branched)
lt_not_taken_3:
    LDI R5, 4           # R5 = 4

# ============================================================
# Test 7: BLT with Zero
# ============================================================
    LDI R1, 0           # R1 = 0
    LDI R2, 1           # R2 = 1
    BLT R1, R2, lt_taken_4   # Should branch (0 < 1)
    LDI R6, -1          # Should be SKIPPED
lt_taken_4:
    LDI R6, 3           # R6 = 3 (confirms branch worked)

    LDI R1, -1          # R1 = -1
    LDI R2, 0           # R2 = 0
    BLT R1, R2, lt_taken_5   # Should branch (-1 < 0)
    LDI R7, -1          # Should be SKIPPED
lt_taken_5:
    LDI R7, 3           # R7 = 3 (confirms branch worked)

# ============================================================
# Test 8: BLT Loop Pattern (backward branch)
# ============================================================
    LDI R1, 0           # R1 = counter
    LDI R2, 3           # R2 = limit
loop_start:
    ADD R1, R1, 1       # R1 = R1 + 1
    BLT R1, R2, loop_start  # Branch back while R1 < 3
    # After loop: R1 should be 3
    LDI R8, 4           # R8 = 4 (confirms loop completed)

# ============================================================
# Validation Summary
# ============================================================
# Expected final register values:
# R3 = 3 (Test 5 passed)
# R4 = 3 (Test 6 passed)
# R5 = 4 (Test 6 passed)
# R6 = 3 (Test 7 passed)
# R7 = 3 (Test 7 passed)
# R8 = 4 (Test 8 passed, loop completed)

    HALT
